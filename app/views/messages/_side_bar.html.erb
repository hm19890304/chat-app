<div class="side-bar">
  <div class="side-top">
    <div class="user-name">
      <%= link_to current_user.name, edit_user_path(current_user) %>
      </div>
    <div class="start-btn">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>
  <div class="side-bottom">
    <% current_user.rooms.each do |room| %>      
      <div class="room-list">
        <div class="room">
          <a href="#"><%= room.name %></a>
       </div>
     </div>
    <% end %>
  </div>
</div>